<div class="col-md-4"></div>
<div class="col-md-4">
<h4><%= t('view.sign_up')%></h4>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
<div class="input-group input_new">
  <div>
  <%= f.label :name, class: "input-form" %>
  <%= f.text_field :name, class: "form-control" %>
  </div>
  <div>
  <%= f.label :email, class: "input-form" %>
  <%= f.email_field :email, class: "form-control" %>
  </div>
  <div>
  <%= f.label :password, class: "input-form" %>
  <%= f.password_field :password, class: "form-control" %>
  </div>
  <div>
  <%= f.label :password_confirmation, class: "input-form" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
</div>
  <%= f.submit t('view.submit_sign_up'), class: "submit_sign_up btn btn-primary" %>
<% end %>
</div>
<div class="col-md-4"></div>
