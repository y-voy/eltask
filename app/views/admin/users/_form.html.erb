<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %><%= t('activerecord.errors.messages.error_counts') %></h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |f| %>
<div class="input-group input_new">
  <div>
    <%= f.label :name, class: "input-form" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div>
    <%= f.label :email, class: "input-form" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </div>
  <div>
    <%= f.label :password, class: "input-form" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div>
    <%= f.label :password_confirmation, class: "input-form" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
<%= f.submit class: "input_btn btn btn-primary" %>
<% end %>
